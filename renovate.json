{
  "extends": [
    "config:base",
    ":prHourlyLimitNone",
    ":prConcurrentLimit20"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    }
  ],
  "commitMessagePrefix": "⬆️",
  "dependencyDashboard": true,
  "regexManagers": [
    {
      "fileMatch": ["\\S+.bicep$"],
      "matchStrings": ["'br:bicepsharedregistry\\.azurecr\\.io\\/bicep\\/modules\\/(?<depName>\\S*):(?<currentValue>\\S*)'"],
      "datasourceTemplate": "github-tags",
      "lookupNameTemplate": "ErickSegaar/blessed-bicep-deploy"
    }
  ]
}